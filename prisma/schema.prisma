generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// ENUMS
enum ProjectRole {
  OWNER
  COLLABORATOR
  VIEWER
}

enum JobStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

enum JobType {
  CODE_EXECUTION
  BACKGROUND_TASK
}

// USER & AUTH
model User {
  id           String  @id @default(uuid())
  email        String  @unique
  name         String
  passwordHash String
  isActive     Boolean @default(true)

  memberships   ProjectMember[]
  refreshTokens RefreshToken[]
  jobs          Job[]

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  projects  Project[]

  @@index([email])
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  revoked   Boolean  @default(false)

  createdAt DateTime @default(now())

  @@index([userId])
}

// PROJECT & WORKSPACE
model Project {
  id          String  @id @default(uuid())
  name        String
  description String?

  members    ProjectMember[]
  workspaces Workspace[]

  createdById String
  createdBy   User   @relation(fields: [createdById], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([createdById])
}

model ProjectMember {
  id        String      @id @default(uuid())
  userId    String
  projectId String
  role      ProjectRole

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([userId, projectId])
  @@index([projectId])
}

model Workspace {
  id   String @id @default(uuid())
  name String

  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([projectId])
}

// ASYNC JOBS (RabbitMQ)
model Job {
  id     String    @id @default(uuid())
  type   JobType
  status JobStatus @default(PENDING)

  payload Json
  result  Json?

  attempts    Int @default(0)
  maxAttempts Int @default(3)

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  idempotencyKey String? @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([status])
  @@index([userId])
}

// REALTIME PRESENCE
model WorkspacePresence {
  id          String @id @default(uuid())
  workspaceId String
  userId      String

  connectedAt DateTime @default(now())
  lastSeenAt  DateTime @updatedAt

  @@unique([workspaceId, userId])
  @@index([workspaceId])
}
